<% @all_news.each do |news| %>
  <% if news.source[1].distance_from(@friend_loc, :units=>:miles) <= 200 %>
    News location: <%= news.source[1].city %><br/>
    <b><%= news.source[0] %></b> is connected to <br/>
    <%= facebook_session.user.friends[1].to_i%>
    <fb:profile-pic uid="503484735" facebook-logo="true" size="thumb" ></fb:profile-pic>
    <fb:profile-pic uid="<%= facebook_session.user.friends[1].to_i%>" facebook-logo="true" size="thumb" ></fb:profile-pic> 
    <%= facebook_session.user.friends_location[0]['name'] %><br/>
    This story is <%= news.source[1].distance_from(@friend_loc, :units=>:miles).round %> miles away from him or her
  <% end %>
<% end %>
