<br/>
<% @all_news.each do |news| %>
  <% news.articles.each do |article| %>
    <% article_friends = article.friends(facebook_session, @friend_locations) %>
    <% if article_friends != [] %>
      <strong><%= link_to(article.title, article.link) %></strong><br/>
      <%= article.description %><br/>
      <br/> In the area:<br/>
      <% article_friends.each do |friend| %>
        <fb:profile-pic uid="<%= friend[:uid] %>" facebook-logo="false" linked="true" size="thumb"></fb:profile-pic><br/>
        <%= friend[:name] %><br/>
      <% end %>
      <br/>
    <% end %>
  <% end %>
<% end %>
